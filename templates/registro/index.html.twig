{% block title %}Registro index{% endblock %}

{% block body %}
    <h1>Registro index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Paterno</th>
                <th>Materno</th>
                <th>Sexo</th>
                <th>Nacimiento</th>
                <th>Mail</th>
                <th>Procedencia</th>
                <th>Carrera</th>
                <th>Semestre</th>
                <th>Porcentaje</th>
                <th>Profesor</th>
                <th>Promedio</th>
                <th>Univprofesor</th>
                <th>Mailprofesor</th>
                <th>Confirmado</th>
                <th>Vegetariano</th>
                <th>Vegecomentario</th>
                <th>Beca</th>
